<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.example.studysample_01.view.model.BookInfo" />

        <import type="com.example.studysample_01.utils.Extensions" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/iv_book"
            bind_url="@{model.image}"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@color/theme_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_book"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/tv_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="@{Extensions.htmlToSting(model.title)}"
                android:textColor="@color/theme_sub_color"
                android:textSize="20dp"
                tools:text="제목" />

            <TextView
                android:id="@+id/tv_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="@{Extensions.htmlToSting(model.author)}"
                android:textColor="@color/theme_sub_color"
                android:textSize="16dp"
                tools:text="작가" />

            <TextView
                android:id="@+id/tv_book_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{model.price + `원`}"
                android:textColor="@color/theme_sub_color"
                android:textSize="16dp"
                tools:text="가격" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>